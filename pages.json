{
	"easycom": {
		"^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "首页"
			}
		},
		{
			"path": "pages/goods/index",
			"style": {
				"navigationBarTitleText": "商品"
			}
		},
		{
			"path": "pages/cart/index",
			"style": {
				"navigationBarTitleText": "购物车"
			},
			"name": "cart"
		},
		{
			"path": "pages/profile/index",
			"style": {
				"navigationBarTitleText": "我的"
			},
			"name": "mine"
		}, {
			"path": "pages/auth/login",
			"style": {
				"navigationBarTitleText": "登录",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/profile/modify/modify",
			"style": {
				"navigationBarTitleText": "修改信息",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/profile/star/star",
			"style": {
				"navigationBarTitleText": "收藏",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/profile/address/address",
			"style": {
				"navigationBarTitleText": "地址管理",
				"enablePullDownRefresh": false
			}

		}
	    ,{
            "path" : "pages/auth/findpassword",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "找回密码",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/auth/reg",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "注册",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/detail/detail",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "商品详情",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/kefu/kefu",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "客服",
                "enablePullDownRefresh": false
            }
            
        }
    ],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "图书商城",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"color": "#909399",
		"selectedColor": "#1296db",
		"borderStyle": "black",
		"backgroundColor": "#ffffff",
		"list": [{
				"pagePath": "pages/index/index",
				"iconPath": "static/icon/index.png",
				"selectedIconPath": "static/icon/index-selected.png",
				"text": "首页"
			},
			{
				"pagePath": "pages/goods/index",
				"iconPath": "static/icon/goods.png",
				"selectedIconPath": "static/icon/goods-selected.png",
				"text": "分类"
			},
			{
				"pagePath": "pages/cart/index",
				"iconPath": "static/icon/cart.png",
				"selectedIconPath": "static/icon/cart-selected.png",
				"text": "购物车"
			},
			{
				"pagePath": "pages/profile/index",
				"iconPath": "static/icon/profile.png",
				"selectedIconPath": "static/icon/profile-selected.png",
				"text": "我的"
			}
		]
	},
	"condition": { //模式配置，仅开发期间生效
		"current": 0, //当前激活的模式(list 的索引项)
		"list": [{
			"name": "", //模式名称
			"path": "", //启动页面，必选
			"query": "" //启动参数，在页面的onLoad函数里面得到
		}]
	}
}
